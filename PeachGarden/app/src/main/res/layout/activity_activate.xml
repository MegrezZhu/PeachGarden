<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyuco.peachgarden.ActivateActivity">

    <ImageView
        android:src="@mipmap/activate_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/btn_activate"
        android:src="@mipmap/activate_button"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="280dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_activate_rule"
        />

    <TextView
        android:id="@+id/tv_activate_count"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="55sp"
        android:fontFamily="@font/kebenyuesong"
        android:background="#00000000"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/btn_activate"
        app:layout_constraintBottom_toBottomOf="@id/btn_activate"
        app:layout_constraintLeft_toLeftOf="@id/btn_activate"
        app:layout_constraintRight_toRightOf="@id/btn_activate"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_activate_rule"
        android:text="@string/activate_rule"
        android:gravity="center"
        android:textSize="18sp"
        android:lineSpacingMultiplier="1.25"
        android:background="#00000000"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_activate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_activate_pay"
        />

    <ImageView
        android:id="@+id/btn_activate_pay"
        android:src="@mipmap/activate_pay_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/tv_activate_rule"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>
