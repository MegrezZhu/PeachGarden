<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/detail_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/detail_man_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.zyuco.peachgarden.DetailActivity">
        <android.support.constraint.Guideline
            android:id="@+id/middle_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            />
        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp"
            />
        <ImageButton
            android:id="@+id/back"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/detail_avatarBg"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_marginTop="70dp"
            android:src="@mipmap/avatar_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/detail_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/detail_avatarBg"/>

        <EditText
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text=""
            android:theme="@style/MyEditText"
            android:maxLength="4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textCursorDrawable="@null"
            app:layout_constraintTop_toBottomOf="@id/detail_avatarBg"/>
        <TextView
            android:id="@+id/before_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="姓名："
            app:layout_constraintRight_toLeftOf="@+id/detail_name"
            app:layout_constraintTop_toBottomOf="@id/detail_avatarBg"/>

        <TextView
            android:id="@+id/detail_belong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="归属势力："
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/detail_name"/>
        <EditText
            android:id="@+id/detail_belong_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text=""
            android:theme="@style/MyEditText"
            android:textCursorDrawable="@null"
            android:maxLength="2"
            app:layout_constraintLeft_toRightOf="@+id/detail_belong"
            app:layout_constraintTop_toBottomOf="@id/detail_name"/>
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="性别："
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="70dp"
            app:layout_constraintTop_toBottomOf="@id/detail_name"/>
        <EditText
            android:id="@+id/gender_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text=""
            android:theme="@style/MyEditText"
            android:maxLength="1"
            app:layout_constraintLeft_toRightOf="@+id/gender"
            android:textCursorDrawable="@null"
            app:layout_constraintTop_toBottomOf="@id/detail_name"/>
        <TextView
            android:id="@+id/detail_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="籍贯："
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_belong"/>
        <EditText
            android:id="@+id/detail_origin_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:theme="@style/MyEditText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textCursorDrawable="@null"
            app:layout_constraintTop_toBottomOf="@id/detail_origin"/>

        <TextView
            android:id="@+id/detail_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="生卒："
            app:layout_constraintLeft_toRightOf="@+id/middle_guideline"
            app:layout_constraintTop_toBottomOf="@id/detail_origin_input"/>
        <EditText
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text=""
            android:theme="@style/MyEditText"
            android:maxLength="4"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@+id/detail_live"
            android:textCursorDrawable="@null"
            app:layout_constraintTop_toBottomOf="@id/detail_origin_input"/>
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="年-"
            app:layout_constraintLeft_toRightOf="@+id/from"
            app:layout_constraintTop_toBottomOf="@id/detail_origin_input"/>
        <EditText
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text=""
            android:theme="@style/MyEditText"
            android:maxLength="4"
            android:inputType="number"
            app:layout_constraintLeft_toRightOf="@+id/year"
            android:textCursorDrawable="@null"
            app:layout_constraintTop_toBottomOf="@id/detail_origin_input"/>
        <TextView
            android:id="@+id/second_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="年"
            app:layout_constraintLeft_toRightOf="@+id/to"
            app:layout_constraintTop_toBottomOf="@id/detail_origin_input"/>

        <TextView
            android:id="@+id/abstractLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:text="人物简介"
            android:textColor="#000"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_live"/>

        <EditText
            android:id="@+id/detail_abstract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:theme="@style/MyEditText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/abstractLabel"/>
        <TextView
            android:id="@+id/historyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:text="历史记载"
            android:textColor="#000"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_abstract"/>

        <EditText
            android:id="@+id/detail_desription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:theme="@style/MyEditText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/historyLabel"/>
        <ImageButton
            android:id="@+id/save"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/save"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_desription"/>
        <ImageView
            android:id="@+id/detail_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/detail_man_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>